# =============================================================================
# MIRAGE BACKEND CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# Get from: https://supabase.com/dashboard → Your Project → Settings → API
# =============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# =============================================================================
# LIVEKIT CONFIGURATION (Required)
# Get from: https://cloud.livekit.io → Your Project → Settings
# =============================================================================
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# =============================================================================
# GOOGLE GEMINI CONFIGURATION (Required)
# Get from: https://aistudio.google.com/app/apikey
# =============================================================================
GOOGLE_API_KEY=your-google-ai-studio-api-key

# =============================================================================
# SIMLI CONFIGURATION (Required)
# Get from: https://app.simli.com → API Keys
# =============================================================================
SIMLI_API_KEY=your-simli-api-key
SIMLI_FACE_ID=tmp9i8bbq7c

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Default agent type (teacher, consultant, etc.)
DEFAULT_AGENT_TYPE=teacher

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# EMOTION MAPPING CONFIGURATION (Optional)
# =============================================================================
# Enable/disable emotion detection and tracking
ENABLE_EMOTION_MAPPING=true

# Gemini model for emotion analysis
GEMINI_MODEL_NAME=gemini-2.0-flash-exp

# Rate Limiting (adjust based on your Gemini API tier)
EMOTION_RATE_LIMIT_CALLS=10           # Max API calls per time window
EMOTION_RATE_LIMIT_WINDOW=60          # Time window in seconds
EMOTION_CACHE_TTL=30                  # Cache TTL in seconds

# Analysis Configuration
EMOTION_ANALYSIS_INTERVAL=5           # Minimum seconds between analyses
EMOTION_CONFIDENCE_THRESHOLD=0.6      # Minimum confidence to adapt personality (0.0-1.0)

# Backend API Configuration (for agent worker)
BACKEND_URL=http://localhost:8000     # Backend API base URL
BACKEND_API_TIMEOUT=5                 # HTTP request timeout in seconds
